{
  "$schema": "../cdk.schema.json",
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "Stage": {
      "Type": "String",
      "Default": "Prod"
    }
  },
  "Conditions": {
    "CreateLogGroup": {
      "Fn::And": [
        {
          "Fn::Equals": [
            {"Ref": "Stage"},
            "Prod"
          ]
        },
        {
          "Fn::Equals": [
            {"Ref": "AWS::Region"},
            "us-east-1"
          ]
        }
      ]
    }
  },
  "Resources": {
    "Hello": {
      "Type": "aws-cdk-lib.aws_sqs.Queue",
      "Properties": {
        "encryption": "UNENCRYPTED"
      }
    },
    "MyLogGroup": {
      "Condition": "CreateLogGroup",
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": { "Ref": "AWS::AccountId" }
      }
    }
  },
  "Outputs": {
    "LogGroupArn": {
      "Value": {
        "Fn::GetAtt": [
          "MyLogGroup",
          "Arn"
        ]
      },
      "Export": {
        "Name": "MyLogGroupArn"
      },
      "Description": "Return log group arn"
    }
  }
}
